{
  "name": "@seij/common-ui",
  "version": "0.1.8",
  "type": "module",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/seij-net/seij-commons-js.git"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "vite build -c vite.config.ts",
    "test": "vitest run",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.lib.json --noEmit",
    "watch": "tsc -p tsconfig.lib.json --noEmit --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@fluentui/react-components": "workspace:*",
    "@seij/common-types": "workspace:*",
    "@seij/common-ui-icons": "workspace:*",
    "i18next-browser-languagedetector": "workspace:*",
    "date-fns": "workspace:*",
    "i18next": "workspace:*",
    "i18next-icu": "workspace:*",
    "lodash-es": "workspace:*",
    "rifm": "workspace:*"
  },
  "devDependencies": {
    "@types/lodash-es": "workspace:*"
  },
  "peerDependencies": {
    "react": "workspace:*",
    "react-dom": "workspace:*"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ]
}
